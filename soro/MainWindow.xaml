<Window x:Class="SortowanieApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sortowanie Liczb i Tekstu" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Wybierz plik" Click="SelectFileButton_Click" Width="100" Height="30"/>
            <ComboBox x:Name="SortMethodComboBox" Margin="0,10,0,0" Width="200">
                <ComboBoxItem Content="Bubble Sort" />
                <ComboBoxItem Content="Quick Sort" />
                <ComboBoxItem Content="Insertion Sort" />
            </ComboBox>
            <Button Content="Sortuj" Click="SortButton_Click" Width="100" Height="30" Margin="0,10,0,0"/>
            <TextBox x:Name="SortedOutputTextBox" Margin="0,10,0,0" Height="200" IsReadOnly="True" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
        </StackPanel>
    </Grid>
</Window>
